<?php
require 'auth.php';
require '../bd.php';

$pdo = getBD();

$orders = $pdo->query("
SELECT c.id_commande,cl.nom,cl.prenom,c.date_commande,c.montant
FROM commandes c
JOIN clients cl ON cl.id_client=c.id_client
ORDER BY id_commande DESC
")->fetchAll();
?>

<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>Orders</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">

<h1>Orders</h1>

<table class="table table-bordered shadow">
<tr>
<th>ID</th>
<th>Client</th>
<th>Total</th>
<th>Date</th>
</tr>

<?php foreach($orders as $o): ?>
<tr>
<td><?= $o['id_commande'] ?></td>
<td><?= $o['nom']." ".$o['prenom'] ?></td>
<td><?= $o['montant'] ?> â‚¬</td>
<td><?= $o['date_commande'] ?></td>
</tr>
<?php endforeach; ?>

</table>

</body>
</html>